import { useMemo } from "react";
import { format, addDays, startOfDay } from "date-fns";
import { Trash2 } from "lucide-react";
import { cn } from "@/lib/utils";
import { TodayHabit } from "@/lib/api/types";
import { Checkbox } from "@/components/ui/checkbox";

interface HabitTableGridProps {
  habits: TodayHabit[];
  startDate: Date;
  onToggle: (habitId: string, date: string) => void;
  onDelete: (habitId: string) => void;
}

export const HabitTableGrid = ({
  habits,
  startDate,
  onToggle,
  onDelete,
}: HabitTableGridProps) => {
  const today = startOfDay(new Date());

  // Generate 7 days
  const days = useMemo(() => {
    return Array.from({ length: 7 }, (_, i) => addDays(startDate, i));
  }, [startDate]);
    let completed = 0;
    let total = 0;

    days.forEach((day) => {
      const dateStr = format(day, "yyyy-MM-dd");
      habits.forEach((habit) => {
        total++;
        if (habit.completions[dateStr]) completed++;
      });
    });

    return total > 0 ? Math.round((completed / total) * 100) : 0;
  }, [habits, days]);

  // Custom dot renderer to show only first and last points
  const renderDot = (props: any, color: string) => {
    const { cx, cy, index, payload } = props;
    const isFirstOrLast = index === 0 || index === chartData.length - 1;

    if (!isFirstOrLast) return null;

    return (
      <circle
        key={`dot-${index}`}
        cx={cx}
        cy={cy}
        r={4}
        fill={color}
        stroke="none"
      />
    );
  };

  return (
    <div className="flex flex-col h-full">
      {/* Fixed Header with Month and Line Chart */}
      <div className="flex-shrink-0">
        <div className="flex flex-col sm:flex-row sm:items-stretch border-b border-border">
          {/* Month Label + Stats */}
          <div className="w-full sm:w-[120px] md:w-[180px] flex-shrink-0 p-2 sm:p-4 flex flex-row sm:flex-col justify-between sm:justify-center items-center sm:items-start border-b sm:border-b-0 sm:border-r border-border bg-[hsl(var(--accent)/0.08)]">
            <div>
              <h2 className="text-sm sm:text-lg font-semibold text-foreground">
                {format(startDate, "MMM yyyy")}
              </h2>
              <p className="text-[10px] sm:text-xs text-muted-foreground sm:mt-0.5">
                {periodProgress}%
              </p>
            </div>
            {/* Quick Stats */}
            <div className="flex sm:flex-col gap-2 sm:gap-1.5 mt-1 sm:mt-3">
              <div className="flex items-center gap-1">
                <div className="w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full bg-accent" />
                <span className="text-[9px] sm:text-[10px] text-muted-foreground">
                  {habits.length}
                </span>
              </div>
              <div className="flex items-center gap-1">
                <div className="w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full bg-[hsl(var(--success))]" />
                <span className="text-[9px] sm:text-[10px] text-muted-foreground">
                  {Math.round((periodProgress / 100) * habits.length * 7)}
                </span>
              </div>
            </div>
          </div>

          {/* Line Chart - aligned with columns */}
          <div className="flex-1 flex relative bg-[hsl(var(--accent)/0.03)] py-1.5 sm:py-3">
            {/* Invisible spacer columns that match day column widths */}
            <div className="flex flex-1">
              {days.map((day) => (
                <div
                  key={format(day, "yyyy-MM-dd")}
                  className="flex-1 min-w-[28px] sm:min-w-[32px]"
                />
              ))}
            </div>
            {/* Spacer for delete column */}
            <div className="w-[24px] sm:w-[36px] flex-shrink-0" />

            {/* Chart overlay positioned absolutely */}
            <div className="absolute inset-0 flex items-end px-0 py-1.5 sm:py-3 pointer-events-none">
              <div className="flex-1 mr-[24px] sm:mr-[36px] pointer-events-auto">
                <ResponsiveContainer width="100%" height={40}>
                  <LineChart
                    data={chartData}
                    margin={{ top: 5, right: 0, left: 0, bottom: 0 }}
                  >
                    <XAxis
                      dataKey="day"
                      axisLine={false}
                      tickLine={false}
                      tick={false}
                      hide
                    />
                    <YAxis hide domain={[0, 100]} />
                    <Tooltip
                      content={({ active, payload }) => {
                        if (active && payload && payload.length) {
                          const data = payload[0].payload;
                          return (
                            <div className="bg-popover border border-border rounded-md px-2 py-1.5 shadow-lg">
                              <p className="text-xs font-medium">
                                {data.day} {data.date}
                              </p>
                              <p className="text-[10px] text-muted-foreground">
                                {data.completed}/{data.total} ({data.rate}%)
                              </p>
                            </div>
                          );
                        }
                        return null;
                      }}
                    />
                    <Line
                      type="monotone"
                      dataKey="rate"
                      stroke="hsl(var(--accent))"
                      strokeWidth={2}
                      dot={(props) => renderDot(props, "hsl(var(--accent))")}
                      activeDot={{ r: 4, fill: "hsl(var(--accent))" }}
                    />
                  </LineChart>
                </ResponsiveContainer>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Scrollable Content Area */}
      <div className="flex-1 overflow-auto min-h-0">
        {/* Day Headers Row */}
        <div className="flex border-b border-border bg-[hsl(var(--accent)/0.05)] sticky top-0 z-10">
          <div className="w-[120px] sm:w-[120px] md:w-[180px] flex-shrink-0 bg-[hsl(var(--accent)/0.05)]" />
          {days.map((day) => {
            const isToday =
              format(day, "yyyy-MM-dd") === format(today, "yyyy-MM-dd");
            const isFuture = day > today;
            return (
              <div
                key={format(day, "yyyy-MM-dd")}
                className={cn(
                  "flex-1 py-1 sm:py-2 text-center min-w-[28px] sm:min-w-[32px] bg-[hsl(var(--accent)/0.05)]",
                  isFuture && "opacity-50"
                )}
              >
                <div className="text-[8px] sm:text-[10px] font-medium text-muted-foreground uppercase tracking-wide">
                  {format(day, "EEEEE")}
                </div>
                <div
                  className={cn(
                    "text-[9px] sm:text-xs font-semibold mt-0.5 mx-auto w-4 h-4 sm:w-6 sm:h-6 flex items-center justify-center rounded-full",
                    isToday && "bg-accent text-accent-foreground"
                  )}
                >
                  {format(day, "d")}
                </div>
              </div>
            );
          })}
          <div className="w-[24px] sm:w-[36px] flex-shrink-0 bg-[hsl(var(--accent)/0.05)]" />
        </div>

        {/* Habits List */}
        <div className="divide-y divide-border/50">
          {habits.map((habit) => {
            const category = getCategoryById(habit.categoryId);
            const IconComponent = HABIT_ICONS[habit.iconName];
            const isSelected = selectedHabits?.has(habit.id) ?? false;

            return (
              <div
                key={habit.id}
                className={cn(
                  "flex items-center hover:bg-secondary/30 transition-colors",
                  isSelected && "bg-accent/10"
                )}
              >
                {/* Selection Checkbox */}
                {isSelecting && onToggleSelection && (
                  <div className="pl-2 sm:pl-3 flex-shrink-0">
                    <Checkbox
                      checked={isSelected}
                      onCheckedChange={() => onToggleSelection(habit.id)}
                    />
                  </div>
                )}

                {/* Habit Name */}
                <div
                  className={cn(
                    "flex-shrink-0 px-2 sm:px-3 py-1.5 sm:py-2 flex items-center gap-1 sm:gap-2",
                    isSelecting
                      ? "w-[100px] sm:w-[120px] md:w-[150px]"
                      : "w-[120px] sm:w-[120px] md:w-[180px]"
                  )}
                >
                  <div
                    className="w-4 h-4 sm:w-6 sm:h-6 rounded flex items-center justify-center flex-shrink-0"
                    style={{
                      backgroundColor: category?.color
                        ? `${category.color}15`
                        : "hsl(var(--secondary))",
                    }}
                  >
                    <IconComponent
                      className="w-2 h-2 sm:w-3 sm:h-3"
                      style={{ color: category?.color || "currentColor" }}
                    />
                  </div>
                  <span className="font-medium text-[9px] sm:text-xs text-foreground truncate">
                    {habit.name}
                  </span>
                </div>

                {/* Day Checkboxes */}
                {days.map((day) => {
                  const dateStr = format(day, "yyyy-MM-dd");
                  const isCompleted = habit.completions[dateStr];
                  const hasNote = habit.notes?.[dateStr];
                  const isToday = dateStr === format(today, "yyyy-MM-dd");
                  // Allow tracking for current week (up to 6 days in future from week start)
                  const isFuture = false;

                  return (
                    <div
                      key={dateStr}
                      className="flex-1 flex justify-center py-1.5 sm:py-2 min-w-[28px] sm:min-w-[32px] relative group"
                    >
                      <button
                        onClick={() => !isFuture && onToggle(habit.id, dateStr)}
                        disabled={isFuture}
                        className={cn(
                          "w-[18px] h-[18px] sm:w-5 sm:h-5 rounded border flex items-center justify-center transition-all duration-150",
                          isFuture && "cursor-not-allowed opacity-30",
                          !isFuture &&
                            "hover:scale-110 focus:outline-none active:scale-95",
                          isToday && !isCompleted && "border-accent",
                          isCompleted
                            ? "bg-accent border-accent text-accent-foreground"
                            : "border-[hsl(var(--accent)/0.4)] bg-background hover:border-accent"
                        )}
                      >
                        {isCompleted && (
                          <Check
                            className="w-2.5 h-2.5 sm:w-3 sm:h-3"
                            strokeWidth={3}
                          />
                        )}
                      </button>
                      {/* Note indicator */}
                      {hasNote && (
                        <div className="absolute -top-0.5 -right-0.5 w-2 h-2 rounded-full bg-[hsl(var(--warning))]" />
                      )}
                      {/* Add note button on hover */}
                      {!isFuture && onAddNote && (
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            setNoteDialog({
                              habitId: habit.id,
                              habitName: habit.name,
                              date: dateStr,
                              existingNote: habit.notes?.[dateStr] || "",
                              isCompleted: !!isCompleted,
                            });
                          }}
                          className="absolute -bottom-1 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                          <MessageSquare className="w-2.5 h-2.5 text-muted-foreground hover:text-accent" />
                        </button>
                      )}
                    </div>
                  );
                })}

                {/* Delete Action */}
                <div className="w-[24px] sm:w-[36px] flex-shrink-0 flex justify-center">
                  <button
                    onClick={() => onDelete(habit.id)}
                    className="text-muted-foreground/50 hover:text-destructive transition-colors p-0.5 sm:p-1"
                  >
                    <Trash2 className="w-2.5 h-2.5 sm:w-3.5 sm:h-3.5" />
                  </button>
                </div>
              </div>
            );
          })}
        </div>

        {habits.length === 0 && (
          <div className="text-center py-12 sm:py-16 text-muted-foreground px-4">
            <p className="text-xs sm:text-sm">
              No habits yet. Add your first habit to start tracking.
            </p>
          </div>
        )}
      </div>

      {/* Note Dialog */}
      {noteDialog && onAddNote && onDeleteNote && (
        <HabitNoteDialog
          habitId={noteDialog.habitId}
          habitName={noteDialog.habitName}
          date={noteDialog.date}
          existingNote={noteDialog.existingNote}
          isCompleted={noteDialog.isCompleted}
          onSaveNote={onAddNote}
          onDeleteNote={onDeleteNote}
          open={!!noteDialog}
          onOpenChange={(open) => !open && setNoteDialog(null)}
        />
      )}
    </div>
  );
};
